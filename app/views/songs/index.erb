<section id="postnew">

<div class="row">
  <div class="large-8 medium-8 columns">
    <p>
      <a href="/songs/new" class="small round button">post a SONG!</a>
    </p>
  </div>
</div>

</section>

<section id="songblock">

  <% @songs.each do |song| %>
  <div class="row">
    <div class="large-8 columns">
      <div class="callout panel">
        <p><%= song.track %></p>
        <p><h3><a href="/songs/<%= song.id %>"></a> <small><strong>by: <%= song.artist %></strong> </p>
        <p><a href="http://<%= song.url %>"><%= song.url %></a></p>
        <p>created: <%= song.created_at %></p>
        <p>votes: <%= upvote_counter(song) %>
          <% if current_user != nil  %>
          <form method="post" action="/upvote/<%= song.id %>">
            <button type="submit" clbuttonss="small round button">Upvote!</button>
          </form>
          <% else %>
          
          <% end %>
        </p>
      </div>
    </div>
  </div>
  <% end %>

</section>
